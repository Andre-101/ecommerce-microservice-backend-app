{
  "name": "Plataformas2",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": { "helm": "latest", "kubectl": "latest", "minikube": "none" },
    "ghcr.io/devcontainers-contrib/features/k3d:1": {},
    "ghcr.io/devcontainers/features/node:1": { "version": "lts" },
    "ghcr.io/devcontainers/features/python:1": { "version": "3.11" }
  },
  "forwardPorts": [80, 443, 3000, 9090, 8080, 8081, 3001, 1880],
  "customizations": {
    "vscode": {
      "settings": { "editor.formatOnSave": true },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "github.vscode-github-actions",
        "redhat.vscode-yaml",
        "ms-python.python",
        "esbenp.prettier-vscode",
        "ms-vscode.makefile-tools",
        "ms-kubernetes-tools.vscode-kubernetes-tools"
      ]
    }
  },
  "remoteUser": "vscode",
  "postCreateCommand": "bash .devcontainer/init.sh && make bootstrap || true"
}
